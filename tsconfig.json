{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "build",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "typeRoots": ["node_modules/@types", "lib/interfaces"],
    "sourceMap": true
  },
  "exclude": ["coverage"],
  "include": ["server.ts", "jest.config.js"]
}
